<label for={{fieldId}} class="col-12 col-sm-4 col-lg-4 col-form-label">
  Input Field
</label>
<div class="col-10 col-sm-6 col-lg-7">
  {{#x-select class="form-control custom-select" id=fieldId value=selectedParam action=(action "paramSelected") as |xs|}}
    {{#xs.option value=""}}Select...{{/xs.option}}
    {{#each sortedParamFields as |paramField|}}
      {{#xs.option value=paramField}}{{paramField}}{{/xs.option}}
    {{/each}}
  {{/x-select}}
</div>
<div class="col-2 col-sm-2 col-lg-1">
  <button type="button" class="btn btn-danger remove-param-btn float-right" disabled={{deleteDisabled}} {{action onRemove selectedParam}}>
    {{fa-icon "trash"}}
  </button>
</div>
