{{#nrc-modal as |modal|}}
  {{#modal.header close=(action close)}}
    {{model.name}} Business Key
  {{/modal.header}}
  {{#modal.body}}
    <div class="form-group row">
      <label for="bk-mapping-type" class="col-sm-4 col-form-label">
        Mapping Type
      </label>
      <div class="col-sm-8">
        {{#x-select class="form-control custom-select" id="bk-mapping-type" value=selectedMappingType action=(action (mut selectedMappingType)) as |xs|}}
          {{#each mappingTypes as |mappingType|}}
            {{#xs.option value=mappingType}}{{mappingType}}{{/xs.option}}
          {{/each}}
        {{/x-select}}
      </div>
    </div>

    {{#if showRawFields}}
      <div class="form-group row">
        <label for="raw-input-field" class="col-sm-4 col-form-label">
          RAW Input Field
        </label>
        <div class="col-sm-8">
          {{!-- {{#x-select class="form-control custom-select" id="raw-input-field" value=fieldMapping.rawField.id action=(action "rawFieldSelected") as |xs|}}
            {{#xs.option value=""}}Select...{{/xs.option}}
            {{#each sortedRawFields as |rawField|}}
              {{#xs.option value=rawField.id}}{{rawField.name}}{{/xs.option}}
            {{/each}}
          {{/x-select}} --}}
        </div>
      </div>
    {{/if}}

    {{#if showLiteralField}}
      <div class="form-group row">
        <label for="literal-value" class="col-sm-4 col-form-label">
          Value
        </label>
        <div class="col-sm-8">
          {{input class="form-control" id="literal-value" value=businessKey.literalValue}}
        </div>
      </div>
    {{/if}}
  {{/modal.body}}
  {{#modal.footer}}
    <button type="button" class="btn btn-secondary" {{action close}}>
      Cancel
    </button>
    <button type="submit" class="btn btn-primary" {{action "save"}}>
      Save
    </button>
  {{/modal.footer}}
{{/nrc-modal}}
